<h2><%= @user.name%>さんページ</h2>
<br>
<div class="task-form">
  <%= link_to admin_users_path, class: "btn btn-primary" do %>
    <span class="glyphicon glyphicon-list g-links" aria-hidden="true"></span> ユーザーリスト一覧に戻る
  <% end %>
  <%= link_to edit_admin_user_path, class: "btn btn-info" do %>
    <span class="glyphicon glyphicon-pencil g-links" aria-hidden="true"></span>　ユーザーアカウント編集
  <% end %>
  <%= link_to admin_user_path(@user), method: :delete, data: { confirm: "#{@user.name}さんを削除してもよろしいですか?" }, class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-trash g-links" aria-hidden="true"></span>　ユーザーアカウント削除
  <% end %>
</div>
      
<div>ID:</div>
<div><%= @user.id %></div>
<div>ユーザー名</div>
<div><%= @user.name%></div>
<div>メールアドレス</div>
<div><%= @user.email %></div>
<div>タスク数</div>
<div><%= @user.tasks.count %></div>
<div>ユーザー管理権限</div>
<div><%= @user.admin? ? "有り" : "無し" %></div>        
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>タスク名</th>
      <th>内容</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th>優先順位</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.detail.truncate(20) %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>