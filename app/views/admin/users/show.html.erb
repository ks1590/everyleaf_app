<div class="task-form">
  <%= link_to admin_users_path, class: "btn btn-primary" do %>
    <span class="glyphicon glyphicon-list g-links" aria-hidden="true"></span>　ユーザーリスト一覧に戻る
  <% end %>
  <%= link_to edit_admin_user_path, class: "btn btn-info" do %>
    <span class="glyphicon glyphicon-pencil g-links" aria-hidden="true"></span>　アカウント編集
  <% end %>
  <%= link_to admin_user_path(@user), method: :delete, data: { confirm: "#{@user.name}さんを削除してもよろしいですか?" }, class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-trash g-links" aria-hidden="true"></span>　アカウント削除
  <% end %>
</div>

<h3><%= @user.name%>さんのアカウント情報です</h3>
<div class="form-horizontal">
  <div class="form-group form-group-lg">
    <div class="col-sm-2 control-label">ID :</div>
    <div class="col-sm-10 form-control-static"><%= @user.id %></div> 
  </div>
  <div class="form-group form-group-lg">
    <div class="col-sm-2 control-label">ユーザー名 :</div>
    <div class="col-sm-10 form-control-static"><%= @user.name %></div>
  </div>
  <div class="form-group form-group-lg">
    <div class="col-sm-2 control-label">メールアドレス :</div>
    <div class="col-sm-10 form-control-static"><%= @user.email %></div>
  </div>
  <div class="form-group form-group-lg">
    <div class="col-sm-2 control-label">タスク数 :</div>
    <div class="col-sm-10 form-control-static"><%= @user.tasks.count %></div>
  </div>
  <div class="form-group form-group-lg">
    <div class="col-sm-2 control-label">ユーザー管理権限 :</div>
    <div class="col-sm-10 form-control-static"><%= @user.admin? ? "有" : "無" %></div>
  </div>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('view.title') %></th>
      <th><%= t('view.detail') %></th>
      <th><%= t('view.deadline') %></th>
      <th><%= t('view.status') %></th>
      <th><%= t('view.priority') %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.detail.truncate(20) %></td>
        <td><%= l task.deadline, format: :short %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>