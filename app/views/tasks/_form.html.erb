<div class="container">
  <div class= "row">
  <div class="col-xs-8 col-xs-offset-2 form">
    <%= form_with(model: @task, local:true) do |f| %>
      <%= render "layouts/error_messages" %>
      <div class="form-group col-xs-8 col-xs-offset-2">
        <%= f.label t('view.title') %><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group col-xs-8 col-xs-offset-2">
        <%= f.label t('view.detail') %><br>
        <%= f.text_area :detail, rows: "6", class: "form-control text-area" %>
      </div>
      <div class="form-group col-xs-8 col-xs-offset-2">
        <%= f.label t('view.deadline') %><br>
        <%= f.date_field :deadline, class: "form-control" %>
      </div>
      <div class="form-group col-xs-8 col-xs-offset-2">
        <%= f.label t('view.priority') %><br>
        <%= f.select(:priority, options_for_select(I18n.t('priority_option')),{include_blank: '選択して下さい'}, {class: "selectpicker select-option"}) %>
      </div>
      <div class="form-group col-xs-8 col-xs-offset-2">
        <%= f.label t('view.status') %><br>
        <%= f.select(:status, options_for_select(I18n.t('status_option')),{include_blank: '選択して下さい'}, {class: "selectpicker select-option"}) %>        
      </div>

      <div class="form-group col-xs-8 col-xs-offset-2">
        <%= f.submit disable_with: '登録中...', class: "btn btn-success btn-block" %>
      </div>

      <div class="form-group col-xs-8 col-xs-offset-2">
        <%= link_to t('view.back'), tasks_path, class: "btn btn-default btn-block" %>
      </div>

    <% end %>
  </div>
  </div>
</div>